<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hhzmy.main.MainActivity">

  <FrameLayout
      android:id="@+id/framelayout"
      android:layout_width="match_parent"
      android:layout_weight="10"
      android:layout_height="0dp">
  </FrameLayout>

<LinearLayout
    android:id="@+id/ll"
    android:layout_above="@+id/framelayout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.75"
    android:layout_alignParentBottom="true"
    android:background="#dfffffff"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/tab_home_normal"/>
    <ImageView
        android:id="@+id/type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/tab_class_normal"/>
    <ImageView
        android:id="@+id/shop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/tab_shopping_normal"/>
    <ImageView
        android:id="@+id/mine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/tab_myebuy_normal"/>
</LinearLayout>
</LinearLayout>
